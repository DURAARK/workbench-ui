  {{building-list buildings=buildings openBuilding="openBuildingAsSession" showBuildingDetails="showDetails"}} {{x-map places=places selected=selectedBuilding}}

  {{#toggle-menu}}
    <nav>
      <ul style="color: black;">
        <li>
          {{filter-view selectedBuilding="showBuildings"}}
        </li>
      </ul>
    </nav>
  {{/toggle-menu}}

  {{#if showSidebarDetails}}
    {{sidebar-details building=selectedBuilding uri=selectedUri}}
  {{/if}}

</div>
