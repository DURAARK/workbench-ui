  <!-- Start filelist item -->
  <div class="c-file-list">
	<div class="c-file-list__category">
	  <h3>Files: 2 | Size: 1.3 GB</h3>
	</div>
	<div class="c-file-list__listing">
	
 	{{#each file in files}}
		  <div class="c-file">

			{{#if file.isIFC}}
				<div class="c-file__header t-file-files">
				  3D Model (IFC)
				</div>
			{{else}}		
				<div class="c-file__header t-file-files">
				  Pointcloud (E57)
				</div>
			{{/if}}

			<div class="c-file__name">
				{{#if file.path}}
				  	<h3>{{file.path}}</h3>
				  {{else}}
				  	<h3>Loading ...{{loading-spinner-center}}</h3>
				  {{/if}}
			  <div class="c-file__size">
			  	{{#if file.size}}
				<h4>{{file.size}} MB</h4>
				  {{/if}}
			  </div>
			</div>

			<div class="c-file__actions">
			  <div {{action "removeFile" file}} class="c-file__action">
				  <i class="fa fa-times"></i>
				</div>
				<div {{action "detailsFile" file}} class="c-file__action">
				  <i class="fa fa-eye"></i>
				</div>
			</div>

		  </div>
	  {{/each}}

	  </div>
	</div>
	<!-- End filelist item -->

	<!-- Begin ADD component -->
	<div class="c-button-list">
	  <div class="c-button-list__category">
		<h3>Add files</h3>
	  </div>

	  <div class="c-button-list__content">

		{{#link-to "workflows.files" class="c-button"}}
		<div class="c-button__frame t-button-files">
			<div class="c-button__name">
				<h3>Local file</h3>
			</div>
		</div>
		{{/link-to}}

	  {{#link-to "workflows.files" class="c-button"}}
		<div class="c-button__frame t-button-files">
		  <div class="c-button__name">
			<h3>Rosetta Archive</h3>
		  </div>
		</div>
	  {{/link-to}}

	  {{#link-to "workflows.files" class="c-button"}}
		<div class="c-button__frame t-button-files">
		  <div class="c-button__name">
			<h3>Bimsync file</h3>
		  </div>
		</div>
	  {{/link-to}}

	  </div>
	</div>
	<!-- End ADD component -->
