<div class="l-cards c-cards">

  {{#if result.length}}

    <table class="c-candidate-list">
      <thead>
        <tr>
          <!-- <th></th> -->
          <th>Result</th>
        </tr>
      </thead>
      <tbody>
        {{#each item in result}}
            <tr>
              <td><a href={{item.buildingName.value}} target="_blank">
                <!-- {{strip-namespace item.buildingname.value}} -->
                {{item.buildingName.value}}
                </a></td>
            </tr>
        {{/each}}
      </tbody>
    </table>

  {{else}}
    {{#help-box}}
      <div class="c-help-box__hint">
        Information on topic "{{topic.label}}" is gathered in the background, please be patient and come back later.
      </div>
    {{/help-box}}
  {{/if}}

