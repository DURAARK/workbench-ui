<div class="c-workflow-step-header is-casting-shadow">
  {{#unless disableBack}}
    <div {{action "backClicked"}} class="c-workflow-step-header__go-left">
      <i class="fa fa-arrow-circle-o-left fa-2x"></i>
    </div>
  {{/unless}}

    {{#if app.eventHistory.pendingEvents.length}}
      <header><i class="fa fa-dot-circle-o"></i>&nbsp; Building: {{session.label}} | Pending events: {{app.eventHistory.pendingEvents.length}}</header>
    {{else}}
      <header><i class="fa fa-dot-circle-o"></i>&nbsp; Building: {{session.label}}</header>
    {{/if}}

  {{#unless disableNext}}
    <div {{action "nextClicked"}} class="c-workflow-step-header__go-right">
      <i class="fa fa-arrow-circle-o-right fa-2x c-workflow-step-header__go-right"></i>
    </div>
  {{/unless}}
</div>
