<div class="l-file c-file {{if item.isSelected 'is-selected'}}">
	<div {{action "showDetails" item}}>

		{{#if isIFC}}
			<div class="c-file__header t-file ifc">
				3D Model (IFC)
			</div>
		{{else}}
			<div class="c-file__header t-file pointcloud">
				Pointcloud (E57)
			</div>
		{{/if}}

		<div class="c-file__name">
			{{#if item.thumbnail}}
			<div class="c-file__thumbnail">
				<img src="{{item.thumbnail}}" alt="File thumbnail" />
			</div>
			{{/if}}

			{{#if filename}}
				{{filename}}
			{{else}}
				<h3>Loading ...{{loading-spinner-center}}</h3>
			{{/if}}
			<div class="c-file__size">
				{{#if item.size}}
					<h4>{{size}}</h4>
				{{/if}}
			</div>
		</div>

	</div>

	<div class="c-file__actions">
		<div {{action "showDetails" item}} class="c-file__action">
			<i class="fa fa-eye"></i>
		</div>
		<div {{action "downloadFile" item}} class="c-file__action">
			<i class="fa fa-cloud-download"></i>
		</div>
	</div>
</div>
