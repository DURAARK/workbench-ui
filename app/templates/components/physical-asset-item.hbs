<div class="l-file c-file">
	<div>

		{{#if isIFC}}
			<div class="c-file__header ifc">
				3D Model Metadata
			</div>
		{{else}}
			{{#if isE57}}
				<div class="c-file__header pointcloud">
					Pointcloud Metadata
				</div>
			{{else}}
				<div class="c-file__header pointcloud">
					Building Metadata
				</div>
			{{/if}}
		{{/if}}

		<div class="c-file__name">
			{{#if isIFC}}
				{{name}}
				<div class="c-file__size">
					<h4>{{size}}</h4>
				</div>
			{{else}}
				{{#if isE57}}
					{{name}}
					<div class="c-file__size">
						<h4>{{size}}</h4>
					</div>
				{{else}}
					<div class="c-file-building">
						<!-- <div class="c-file-building__pic">
							<img src="/images/building_placeholder.png">
						</div> -->
						{{name}}
						<br> {{address}}
					</div>
				{{/if}}
			{{/if}}
		</div>

	</div>

	<div {{action "showDetails" item}} class="c-file__actions">
		<div class="c-file__action">
			{{#if item.isSelected}}
				<i class="fa fa-file-text"></i>
			{{else}}
				<i class="fa fa-file-text-o"></i>
			{{/if}}
		</div>
	</div>

</div>
