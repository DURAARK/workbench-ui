<div class="l-file c-file highlight-border">
	{{#if topic.isLoading}}
		{{loading-spinner-small}}
	{{/if}}

	<div {{action "select" topic}}>

		<div class="c-tool-item__header">
			<i class="fa fa-wrench"></i>
		</div>

		<div class="c-file__name" style="text-align: center;">
			{{topic.label}}
		</div>

	</div>

	<div class="c-file__actions">
		<div {{action "remove" topic}} class="c-file__action">
			<i class="fa fa-remove"></i>
		</div>
	</div>

</div>
