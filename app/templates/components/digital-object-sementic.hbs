<div {{action "selectItem" item}} class="l-file-large c-file {{if item.isSelected 'is-selected'}} {{if isIFC 'l-file-small'}} {{if isE57 'l-file-small'}}">
	<div>

		{{#if isIFC}}
			<div class="c-file__header t-file ifc">
				BIM Model
			</div>
		{{else}}
			{{#if isE57}}
				<div class="c-file__header t-file pointcloud">
					Point Cloud
				</div>
			{{else}}
				{{#if isPhysicalAsset}}
					<div class="c-file__header t-file pointcloud">
						Building Context
					</div>
				{{else}}
					<div class="c-file__header t-file pointcloud">
						Unknown Type
					</div>
				{{/if}}
			{{/if}}
		{{/if}}

		<div class="c-file__name">
			{{#if isIFC}}
				{{name}}
				<div class="c-file__size">
					<h4>{{size}}</h4>
				</div>
			{{else}}
				{{#if isE57}}
					{{name}}
					<div class="c-file__size">
						<h4>{{size}}</h4>
					</div>
				{{else}}
					<div class="c-file-building">
						<div class="c-file-building__pic">
							<img src="/images/building_placeholder.png"> </div>
						{{name}}
						<br>
						<br> {{adress}}
					</div>
				{{/if}}
			{{/if}}
		</div>

	</div>

	<div class="c-file__actions">
		<div class="c-file__action">
			{{#if item.isSelected}}
				<i class="fa fa-check"></i>
			{{else}}
				<i class="fa fa-plus"></i>
			{{/if}}
		</div>
	</div>

</div>
