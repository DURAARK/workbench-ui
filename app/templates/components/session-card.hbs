<div class="building-card-wide mdl-card mdl-shadow--2dp">
  <div {{action "editClicked" session}} class="mdl-card__status {{if isWIP 'wip'}}  {{if isArchived 'archived'}} {{if isNew 'new'}}">
    {{#if isNew}}
      New {{else if isWIP}} Work In Progress {{else if isArchived}} Archived
    {{/if}}
  </div>

  <div {{action "editClicked" session}} class="mdl-card__title">
    <h2 class="mdl-card__title-text">{{session.label}}</h2>
  </div>

  <div {{action "editClicked" session}} class="mdl-card__address">
    {{session.address}}
  </div>

  <div {{action "editClicked" session}} class="mdl-card__supporting-text">
    {{session.description}}
  </div>

  <div class="mdl-card__actions mdl-card--border">
    <!-- <a {{action "editClicked"   session}} class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">EDIT</a> -->
      <a {{action "deleteClicked" session}} class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">DELETE</a>
  </div>
</div>
