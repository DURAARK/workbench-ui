<section class="post-controls">
    <a class="btn btn-default post-edit" {{action "editFiles" stage.model}}> Edit</a>
</section>

<br>

{{#if stage.files.length}}

	<span class="da-workflow-description-small">Included files:</span>

	<br><br>

	<ul>
	{{#each file in stage.files}}
		<li class="da-file-entry"><div class="da-valid btn btn-green" title="Valid"> VALID</div> {{file.path}}</li>
	{{/each}}
	</ul>

	{{!-- Status: {{stage.status}} --}}
	
{{else}}

<div style="text-align: left;">No files added yet.</div>

{{/if}}