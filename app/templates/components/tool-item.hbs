<div class="l-file c-file">
	<div {{action "infoClicked" tool}} style="position: relative;">

		<div class="c-tool-item__header">
			{{#if tool.hasData}}
				Details &nbsp;<i class="fa fa-arrow-circle-o-right fa-lg"></i>
			{{/if}}
			{{#if tool.isLoading}}
				Processing &nbsp;<i class="fa fa-arrow-circle-o-right fa-lg"></i>
				<!-- {{loading-spinner-small}} -->
			{{/if}}
			{{#if tool.hasError}}
				Error &nbsp;<i class="fa fa-arrow-circle-o-right fa-lg"></i>
			{{/if}}
		</div>

		<div class="c-file__name" style="text-align: center;">
			{{tool.label}}
		</div>

	</div>
	<div class="c-file__actions">
		<div {{action "remove" tool}} class="c-file__action" style="float: left;">
			{{#unless static}}
				<i class="fa fa-remove"></i>
			{{/unless}}
		</div>
	</div>

</div>
