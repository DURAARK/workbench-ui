<div class="l-duraark-building-filter c-duraark-building-filter">

  {{#duraark-sidebar overflowYScroll=true}}

    {{#if (eq activeTab "location")}}

      {{#duraark-sidebar-item name="Locality" }}
        <div class="c-duraark-building-filter__address">
          {{#duraark-auto-complete options=addressLocalityItems valueProperty="addressLocality" propertyType="http://www.w3.org/2001/XMLSchema#string" onSelectionChange="filterChanged" inputClass="foobar" placeHolderText="Enter locality ..." noMesssagePlaceHolderText="No addresses found"
          as |item|}}
            <span>{{item.addressLocality}}</span>
            <p>{{item.countryName}}</p>
          {{/duraark-auto-complete}}
        </div>
      {{/duraark-sidebar-item}}

      {{#duraark-sidebar-item name="Country" }}
        {{multi-select choices=addressCountryItems labelProperty="countryName" valueProperty="addressCountry" propertyType="http://www.w3.org/2001/XMLSchema#string" onSelectionChange="filterChanged" selectedItems=selectedAddressCountries}}
      {{/duraark-sidebar-item}}
      
    {{/if}}

    {{#if (eq activeTab "geometric")}}

      {{#duraark-sidebar-item name="Number of Floors" }}
        {{multi-select choices=floorCountItems labelProperty="floorCount" valueProperty="floorCount" propertyType="http://www.w3.org/2001/XMLSchema#int" onSelectionChange="filterChanged"}}
      {{/duraark-sidebar-item}}

      {{#duraark-sidebar-item name="Number of Rooms" }}
        {{multi-select choices=roomCountItems labelProperty="roomCount" valueProperty="roomCount" propertyType="http://www.w3.org/2001/XMLSchema#int" onSelectionChange="filterChanged"}}
      {{/duraark-sidebar-item}}

    {{/if}}

    {{#if (eq activeTab "metadata")}}

      {{#duraark-sidebar-item name="Locality" }}
        <div class="c-duraark-building-filter__address">
          {{#duraark-auto-complete options=addressLocalityItems labelProperty="addressLocality" valueProperty="addressLocality" propertyType="http://www.w3.org/2001/XMLSchema#string" onSelectionChange="filterChanged" inputClass="foobar" placeHolderText="Enter locality ..." noMesssagePlaceHolderText="No addresses found"
          as |item|}}
            <span>{{item.addressLocality}}</span>
            <p>{{item.countryName}}</p>
          {{/duraark-auto-complete}}
        </div>
      {{/duraark-sidebar-item}}

      {{#duraark-sidebar-item name="Creator" }}
        {{multi-select choices=creatorItems labelProperty="creator" valueProperty="creator" propertyType="http://www.w3.org/2001/XMLSchema#string"  onSelectionChange="filterChanged"}}
      {{/duraark-sidebar-item}}

    {{/if}}

  {{/duraark-sidebar}}
</div>
