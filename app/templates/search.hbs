        </li>
      </ul>
    </nav>
  {{/toggle-menu}}

  {{#if showSidebarDetails}}
    {{sidebar-details building=selectedBuilding uri=selectedUri}}
  {{/if}} -->

  {{duraark-footer}}
</div>
