<div class="c-button-list">
	<div class="c-button-list__content">

		<div {{action 'next'}} class="c-button">
			<div class="c-button__frame t-button-files">
				<div class="c-button__name">
					<h3>Next</h3>
				</div>
			</div>
		</div>

		<div class="c-button">
			<div class="c-button__frame t-button-files">
				<div class="c-button__name">
					<h3>Back</h3>
				</div>
			</div>
		</div>

	</div>
</div>

<div class="l-files">

	<div class="l-file-list">

		{{#file-list files=files as |file|}}
			{{file-item item=file select="toggleSelection" details="showDetails"}}
		{{/file-list}}
	</div>

	{{#if showSidebar}}
		<div class="l-file-details">

			{{#if isLoadingMetadata}}
				<div style="color: white;">LOADING ...</div>
				{{loading-spinner-center}}
			{{else}}

				{{#if fileInfo}}
					<h3 class="title" style="color: white;">{{fileInfoShortName}}</h3>
					{{#if errors}}
						{{#each error in errors}}
							<div>Type: {{error.type}}</div>
							<div>Message: {{error.msg}}</div>
						{{/each}}
					{{else}}
						{{buildm-viewer file=fileInfo}}
					{{/if}}
				{{else}}
					<h2 class="title" style="color: white;">To show details use the <i class="fa fa-eye"></i> icon on a file.</h2>
					<h3 style="color: white;">Depending on the file size it may take some seconds/minutes for the first metadata extraction.</h3>
				{{/if}}
			{{/if}}

		</div>
	{{/if}}
</div>