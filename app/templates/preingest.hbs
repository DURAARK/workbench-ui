<main id="main">
    <section class="content-view-container">
        <section class="content-list">
            <header class="floatingheader">
                <section class="manage content-filter">
                    <small>All SIP Sessions</small>
                </section>
                {{#link-to "preingest.create" class="btn btn-green" title="New Session"}} CREATE{{/link-to}}
            </header>

            <section class="content-list-content js-content-scrollbox">        
                <ol class="posts-list">
                {{#each session in sessions}}
                    {{session-item session=session isSelected=session.isSelected action="showSession"}}
                {{/each}}
                </ol>

            </section> 
        </section>

        <section class="content-preview">
            <header class="floatingheader">
                <small>
                    <span class="status">SIP Details</span>
                </small>
            </header>

            <section class="content-preview-content">
                {{outlet}}
            </section>
        </section>
    </section>
</main>
