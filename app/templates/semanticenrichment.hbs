<div class="c-button-list">
  <div class="c-button-list__content">

   <div class="c-link-list">
      <div {{action 'back'}} class="c-link-list-grid-small">
        <div class="c-link-list-back">
          <h3><i class="fa fa-chevron-left"> </i> Metadata</h3>
        </div>
      </div>
      <div {{action 'next'}} class="c-link-list-grid-small"> 
        <div class="c-link-list-next">
          <h3>Geometric Enrichment <i class="fa fa-chevron-right"> </i></h3>
        </div>
      </div>
    </div>

    <div {{action 'save'}} class="c-button">
      <div class="c-button__frame t-button-files">
        <div class="c-button__name">
          <h3>Save</h3>
        </div>
      </div>
    </div>

  </div>
</div>

<div class="l-files">

  <div class="l-file-list">

    {{#file-list files=digitalObjects as |do|}}
      <div>

        {{physical-asset-item item=do details="showDetails"}}

        {{#each topic in do.semMD.topics}}
          {{topic-item topic=topic digitalObject=do select="showSelectedTopic" remove="removeTopic"}}
        {{/each}}

        {{add-item select="showTopicSelection" item=do}}
      </div>
    {{/file-list}}

  </div>

  {{#if model}}
    <div class="l-file-details">

      {{#if isLoadingMetadata}}
        <div style="color: white;">LOADING ...</div>
        {{loading-spinner-center}}
      {{else}}

        {{#if fileInfo}}
          {{information-topic-selector digitalObject=do topics=topics click="clickedTopic" }}
        {{else}}
          {{#if topic}}
            {{topic-viewer digitalObject=do topic=topic}}
          {{else}}
          <h2 class="title" style="color: white;">Select a plan or point cloud to enricht it with information topics.</h2>
          {{/if}}
        {{/if}}
      {{/if}}

    </div>
  {{/if}}
</div>
